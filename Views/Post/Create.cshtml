@model ThreadShare.DTOs.Entites.PostViewModel

@{
    ViewData["Title"] = "Create New Post";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Body" class="control-label">Body</label>
        <textarea asp-for="Body" class="form-control"></textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ForumId" class="control-label">Forum ID</label>
        <input asp-for="ForumId" class="form-control" />
        <span asp-validation-for="ForumId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create Post</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
