@{
    ViewData["Title"] = "Delete Forum";
}

<h1>Delete Forum</h1>

<div>
    <h4>Enter the ID of the forum you want to delete:</h4>
    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="ForumId" class="control-label">Forum ID</label>
            <input id="ForumId" name="ForumId" type="number" class="form-control" required />
            <span asp-validation-for="ForumId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
